#%RAML 0.8
---
title: OpenOCR API
baseUri: http://openocr.yourserver.co
version: v1

schemas:
 - ocr: !include api_schema.json

/ocr:
  post:
    body:
      application/json:
        schema: ocr
        example: |
          {  
            "img_url":"http://bit.ly/ocrimage",
            "engine":"tesseract",
            "engine_args":{  
              "config_vars":{  
                "tessedit_char_whitelist":"0123456789"
              },
              "psm":"3"
            }
          }
    responses:
      200:
        body:
          text/plain:
            example: |
                You can create local variables ..
